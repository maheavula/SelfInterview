rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read all interviewFeedbacks (filtered on client side)
    // But only allow users to write their own feedback
    match /interviewFeedbacks/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.resource.data.user == request.auth.token.email ||
         request.resource.data.userInputs.email == request.auth.token.email);
    }
    
    // Users can only access their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // Users can only access their own feedback entries
    match /userFeedback/{document} {
      allow read, write: if request.auth != null &&
        (resource.data.userEmail == request.auth.token.email || 
         request.resource.data.userEmail == request.auth.token.email);
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 